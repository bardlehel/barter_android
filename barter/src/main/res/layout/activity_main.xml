<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <fragment android:name="com.barter.app.LoginFragment"
        android:id="@+id/login_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout="@layout/login_splash" />

 	<fragment android:name="com.barter.app.MainFragment"
            android:id="@+id/main_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
        tools:layout="@layout/fragment_main" />

        <fragment android:name="com.barter.app.HaveFragment"
                android:id="@+id/have_fragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
            tools:layout="@layout/have_layout" />
        <fragment android:name="com.barter.app.ChooseTopicFragment"
            android:id="@+id/choose_topic_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout="@layout/choose_topic" />


  </LinearLayout>
