<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    tools:context="com.example.test.MainActivity$LoginFragment" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:layout_weight="0.00"
        android:orientation="horizontal" >

		<View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            />

		<TextView
		    android:id="@+id/tvHaves"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="@string/txtHaves"
		    android:textColor="#ffffff"
		    android:textSize="@dimen/test" />

        <ImageButton
            android:id="@+id/btnManageHaves"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/more"
            android:onClick="manageHaves" />

    </LinearLayout>

   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:layout_weight="0.07"
        android:orientation="horizontal" >

		<View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            />

		<TextView
		    android:id="@+id/tvWants"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="@string/txtWants"
		    android:textColor="#ffffff"
		    android:textSize="@dimen/test" />

        <ImageButton
            android:id="@+id/btnManageWants"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/more"
            android:onClick="manageWants" />

    </LinearLayout>

</LinearLayout>